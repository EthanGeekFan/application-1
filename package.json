{
    "name": "Schedule",
    "version": "1.0.0",
    "description": "A schedule application for classes and schools",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder -m"
    },
    "repository": "https://github.com/EthanGeekFan/application-1",
    "keywords": [
        "Electron",
        "Schedule",
        "Class",
        "School"
    ],
    "author": "Yifan Yang",
    "license": "CC0-1.0",
    "devDependencies": {
        "electron": "^8.1.1",
        "electron-builder": "^22.4.1"
    },
    "dependencies": {
        "electron-store": "^5.1.1",
        "jquery": "^3.4.1"
    },
    "build": {
        "productName": "ClassAssistant",
        "appId": "cf.room923",
        "copyright": "Yifan Yang",
        "directories": {
            "output": "build"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "./build/icons/aaa.ico",
            "uninstallerIcon": "./build/icons/bbb.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "ClassAssistant"
        },
        "mac": {
            "icon": "build/icons/icon.icns"
        },
        "win": {
            "icon": "build/icons/aims.ico",
            "target": [{
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }]
        },
        "linux": {
            "icon": "build/icons"
        }
    }
}